generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id          Int         @id @default(autoincrement())
  customer    String
  email       String
  phone       String?
  address     String?
  products    Json
  totalAmount Float
  status      OrderStatus @default(pending)
  createdAt   DateTime    @default(now())

  @@map("orders")
}

enum OrderStatus {
  pending
  processing
  shipped
  delivered
  cancelled
  refunded
  failed
  returned
}
