generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id          Int      @id @default(autoincrement())
  customer    String
  email       String
  phone       String
  address     String
  products    Json
  totalAmount Float
  status      Status   @default(pending)
  createdAt   DateTime @default(now())

  paymentMethod PaymentMethod
  paymentStatus Status        @default(pending)
  paymentId     String?
  paymentDate   DateTime?

  @@map("orders")
}

enum Status {
  pending
  processing
  shipped
  delivered
  cancelled
  refunded
  failed
  returned
}

enum PaymentMethod {
  creditCard
  boleto
  pix
}
